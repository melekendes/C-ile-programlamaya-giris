#include <stdio.h>
#include <stdlib.h>

int main() {
	int i, j, k, l;
	int star, nonstar;
	
	printf("Enter the value:");
	scanf("%d", &star);
	
	for(i=0; i<=star; i++){
		for(j=1; j<=star-i; j++){
			printf(" ");
		}
		for(j=star; j<=star+i; j++){
			printf("*");
		}
		printf("\n");
	}
	


	return 0;
}


